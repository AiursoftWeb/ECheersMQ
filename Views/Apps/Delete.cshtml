@model Echeers.Mq.Models.App

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete an App</h2>

<p>Warning! Once you deleted `@Model.Name`, you will lose all its channels and messages.</p>
<div>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sure to delete" class="btn btn-danger" /> 
    </form>
    <a asp-action="MyApps">Back to list</a>
</div>